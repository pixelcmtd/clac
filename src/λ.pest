// TODO: unicode compliance
WHITESPACE = _{ " " | NEWLINE | "," }

// TODO: unicode support
variable = { ASCII_ALPHANUMERIC }
pexpr = { "(" ~ expr ~ ")" }
item = { variable | pexpr }

// TODO: assignments

expr = { func | item+ }

params = { variable+ }
body = { expr }
func = { ("λ" | "Λ") ~ params ~ "." ~ body }
